<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sv.saraviasrent.www.entities.Mensajes" table="mensajes" schema="saravias_rentacar">
        <id name="mensajeId">
            <column name="mensaje_id" sql-type="varchar(12)" length="12"/>
        </id>
        <property name="mensaje">
            <column name="mensaje" sql-type="text"/>
        </property>
        <property name="emisorMensaje">
            <column name="emisor_mensaje" sql-type="varchar(6)" length="6"/>
        </property>
        <property name="fechaCreacion">
            <column name="fecha_creacion" sql-type="timestamp"/>
        </property>
        <property name="conversacionId">
            <column name="conversacion_id" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="estado">
            <column name="estado" sql-type="enum('enviado', 'recibido', 'leido')"/>
        </property>
    </class>
</hibernate-mapping>