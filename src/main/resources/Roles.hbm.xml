<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sv.saraviasrent.www.entities.Roles" table="roles" schema="saravias_rentacar">
        <id name="rolId">
            <column name="rol_id" sql-type="varchar(5)" length="5"/>
        </id>
        <property name="rol">
            <column name="rol" sql-type="varchar(20)" length="20"/>
        </property>
        <set name="usuariosByRolId" inverse="true">
            <key>
                <column name="rol_id"/>
            </key>
            <one-to-many not-found="ignore" class="sv.saraviasrent.www.entities.Usuarios"/>
        </set>
    </class>
</hibernate-mapping>